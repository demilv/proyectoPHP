{% extends "Taxi/baseTaxi.html.twig" %}

{% block contenido %}
    <h2>Listado de Taxis </h2>
    <div class="row row-cols-1 row-cols-md-2">
        {% for taxi in taxis %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ taxi.modelo }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ taxi.marca }}</h5>
                        <p class="card-text">{{ taxi.velocidad }}</p>
                        <a href="{{ path('getTaxi', {'id': taxi.id})}}" class="btn btn-primary">MÃ¡s Info</a>
                        <a href="{{path('editTaxi',{'id':taxi.id})}}" class="btn btn-primary">Editar</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
